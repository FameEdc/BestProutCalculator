<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wildcodeschool.apprenti.bestproutcalculator.MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Recensement des prouts"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtCoord"
        android:text="CordonnÃ©es :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/title"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/editLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:inputType="numberDecimal"
        android:layout_marginStart="46dp"
        android:layout_alignBaseline="@+id/txtCoord"
        android:layout_alignBottom="@+id/txtCoord"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editLat"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        />


    <TextView
        android:id="@+id/txtSmell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Odeur :"
        android:textSize="20sp"
        android:layout_below="@+id/editLong"
        android:layout_alignParentStart="true" />


    <SeekBar
        android:id="@+id/seekBar3Smell"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_alignBottom="@+id/txtSmell"
        android:layout_toEndOf="@+id/txtSmell"
        />

    <TextView
        android:id="@+id/value_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSmell"
        android:layout_toEndOf="@+id/seekBar3Smell"
        />


    <TextView
        android:id="@+id/date_text"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3Smell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        />

    <Button
        android:id="@+id/btnSubmit"
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
         />





</RelativeLayout>
